@model WebPharmacy.Models.Outcoming

@{
    ViewData["Title"] = "Create";
}

<h2>Добавить</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Список проданных товаров</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MedicamentId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="MedicamentId" class ="form-control" asp-items="ViewBag.MedicamentId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Count" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OutcomedAt" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="OutcomedAt" class="form-control" />
                <span asp-validation-for="OutcomedAt" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
