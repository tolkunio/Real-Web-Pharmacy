@model MedicamentModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Добавить</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Лекарственные средства</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirmId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="FirmId" class ="form-control" asp-items="ViewBag.Firms"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FormulationId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="FormulationId" class="form-control" asp-items="ViewBag.Formulations"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicamentTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="MedicamentTypeId" class ="form-control" asp-items="ViewBag.MedicamentTypes"></select>
            </div>
        </div>
      <div class="form-group">
        <label  asp-for="ImageUrl" class="col-md-2 control-label"></label>
          <div class="col-md-10">
              <input type="file" name="Picture" />
              <span asp-validation-for="ImageUrl" class="text-danger"></span>
          </div>
      </div>
        <div class="form-group">
            <label asp-for="ExpirationDate" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input type="date" asp-for="ExpirationDate" class="form-control">
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">На главную</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
